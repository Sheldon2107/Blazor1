@page "/task"
@inject HttpClient Http
@inject Blazor1.services.KampungService KampungService

<PageTitle>Task</PageTitle>

<div class="header">
    <div class="text-container">
        <h1>Task</h1>
        <p>View all of you task information</p>
    </div>
</div>

<div class="container">
    <div class="left-container"> 
        <p>to display all of the info from database</p>
    </div>
    <div class="right-container">
        <div class="form-container">
            <form action="">
                <h1>New Task</h1>
                <div class="form-group">
                    <label for="title">Task Title:</label>
                    <input type="text" name="title" id="title" placeholder="task title">
                </div>
                <div class="form-group">
                    <label for="desc">Description:</label>
                    <input type="text" name="desc" id="desc" placeholder="task description">
                </div>
                <div class="form-group">
                    <label for="duedate">Due Date:</label>
                    <input type="date" name="duedate" id="duedate">
                </div>
                <div class="form-group">
                    <label for="assignee">Assignee:</label>
                    <select name="asignee" id="assignee">
                        <option value=""></option>
                        <option value="">member 1</option>
                        <option value="">member 2</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="project">Project: </label>
                    <select name="project" id="project">
                        <option value=""></option>
                        <option value="">Project 1</option>
                        <option value="">Project 2</option>
                    </select>
                </div>
            
                <button class="add-task-button" type="submit">ADD</button>
        
            </form>
        </div>
    </div>
</div>


